[mysqld]

# 连接设置
max_connections = 500
max_connect_errors = 200

# SQL模式
sql_mode = 'STRICT_TRANS_TABLES,NO_ZERO_IN_DATE,NO_ZERO_DATE,ERROR_FOR_DIVISION_BY_ZERO,NO_ENGINE_SUBSTITUTION'

# 字符集设置
character_set_server = utf8mb4


# 内存优化 - 根据服务器内存调整
innodb_buffer_pool_size = 16G          # 设置为物理内存的60-70%
innodb_buffer_pool_instances = 8       # 多实例提高并发性能
innodb_buffer_pool_chunk_size = 128M

# 排序和临时表优化
sort_buffer_size = 8M                      # 增大排序缓冲区
read_buffer_size = 4M                      # 增大读缓冲区
read_rnd_buffer_size = 8M                  # 增大随机读缓冲区
tmp_table_size = 256m                        # 增大临时表大小
max_heap_table_size = 256m                   # 增大内存表大小

# InnoDB优化
innodb_log_file_size = 1G                  # 增大到2G提升写入性能
innodb_log_buffer_size = 256M              # 增大日志缓冲区
innodb_flush_log_at_trx_commit = 1     # 1=最安全，2=高性能
innodb_flush_method = O_DIRECT

# 并发优化
innodb_read_io_threads = 4
innodb_write_io_threads = 8

# 锁优化
innodb_lock_wait_timeout = 50
lock_wait_timeout = 60

# IO容量设置（根据存储类型调整）
innodb_io_capacity = 3000                  # SSD建议2000-4000
innodb_io_capacity_max = 6000              # 最大IO能力


# 慢查询日志
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow.log
long_query_time = 2
